@page
@model MovieTicketSystem.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="hero bg-dark text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">Movie Tickets</h1>
                <p class="lead">Đặt vé xem phim trực tuyến dễ dàng và nhanh chóng.</p>
                <p class="mb-4">Tham gia cùng chúng tôi để được trải nghiệm những bộ phim mới nhất với chất lượng hình ảnh và âm thanh tuyệt hảo.</p>
                <div class="d-flex gap-2">
                    <a href="#now-showing" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-film me-2"></i>Đang chiếu
                    </a>
                    <a href="#coming-soon" class="btn btn-outline-light btn-lg px-4">
                        <i class="bi bi-calendar-event me-2"></i>Sắp chiếu
                    </a>
                </div>
            </div>
            <div class="col-md-6 d-none d-md-block">
                <img src="https://via.placeholder.com/600x400?text=Movie+Banner" class="img-fluid rounded shadow" alt="Movie Banner">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <section id="now-showing" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold"><i class="bi bi-film me-2"></i>Phim đang chiếu</h2>
            <a href="#" class="btn btn-outline-primary">Xem tất cả <i class="bi bi-arrow-right ms-1"></i></a>
        </div>
        
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var movie in Model.Movies)
            {
                <div class="col">
                    <div class="card h-100 movie-card shadow-sm">
                        <img src="https://via.placeholder.com/350x500?text=@Uri.EscapeDataString(movie.Title)" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="card-title mb-0">@movie.Title</h5>
                                <span class="badge bg-primary">@movie.Rating</span>
                            </div>
                            <p class="card-text text-muted">Thời lượng: @(movie.Duration) phút</p>
                            <p class="card-text">@(movie.Description?.Length > 100 ? movie.Description.Substring(0, 100) + "..." : movie.Description)</p>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-grid gap-2">
                                <a href="#" class="btn btn-primary">
                                    <i class="bi bi-ticket-perforated me-2"></i>Đặt vé
                                </a>
                                <a asp-page="/Movies/Details" asp-route-id="@movie.MovieId" class="btn btn-outline-secondary">
                                    <i class="bi bi-info-circle me-2"></i>Chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    
    <section id="coming-soon" class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold"><i class="bi bi-calendar-event me-2"></i>Phim sắp chiếu</h2>
            <a href="#" class="btn btn-outline-primary">Xem tất cả <i class="bi bi-arrow-right ms-1"></i></a>
        </div>
        
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
            @foreach (var movie in Model.ComingSoonMovies)
            {
                <div class="col">
                    <div class="card h-100 movie-card shadow-sm">
                        <div class="position-relative">
                            <img src="https://via.placeholder.com/300x450?text=@Uri.EscapeDataString(movie.Title)" class="card-img-top" alt="@movie.Title">
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-danger">Sắp chiếu</span>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <p class="card-text text-muted">
                                <small>
                                    <i class="bi bi-calendar me-2"></i>Khởi chiếu: @movie.ReleaseDate?.ToString("dd/MM/yyyy")
                                </small>
                            </p>
                            <p class="card-text">@(movie.Description?.Length > 80 ? movie.Description.Substring(0, 80) + "..." : movie.Description)</p>
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-page="/Movies/Details" asp-route-id="@movie.MovieId" class="btn btn-outline-primary w-100">
                                <i class="bi bi-info-circle me-2"></i>Chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
    
    <section class="mb-5 py-5 bg-light rounded">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 mb-4 mb-md-0">
                    <h2 class="fw-bold">Tại sao nên chọn chúng tôi?</h2>
                    <p class="lead">Trải nghiệm xem phim tuyệt vời với nhiều ưu đãi hấp dẫn</p>
                    <div class="mt-4">
                        <div class="d-flex mb-3">
                            <div class="me-3">
                                <i class="bi bi-check-circle-fill text-primary fs-4"></i>
                            </div>
                            <div>
                                <h5>Dễ dàng đặt vé</h5>
                                <p>Đặt vé online chỉ trong vài phút, không cần xếp hàng</p>
                            </div>
                        </div>
                        <div class="d-flex mb-3">
                            <div class="me-3">
                                <i class="bi bi-check-circle-fill text-primary fs-4"></i>
                            </div>
                            <div>
                                <h5>Phim mới nhất</h5>
                                <p>Luôn cập nhật những bộ phim mới và hot nhất</p>
                            </div>
                        </div>
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="bi bi-check-circle-fill text-primary fs-4"></i>
                            </div>
                            <div>
                                <h5>Nhiều ưu đãi hấp dẫn</h5>
                                <p>Khuyến mãi đặc biệt cho thành viên thường xuyên</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-lg">
                        <div class="card-body p-4">
                            <h3 class="card-title mb-4 text-center">Thống kê nhanh</h3>
                            <div class="row text-center">
                                <div class="col-4">
                                    <h3 class="text-primary">@Model.MovieCount</h3>
                                    <p class="text-muted">Phim</p>
                                </div>
                                <div class="col-4">
                                    <h3 class="text-success">@Model.ScreenCount</h3>
                                    <p class="text-muted">Màn hình</p>
                                </div>
                                <div class="col-4">
                                    <h3 class="text-info">@Model.ShowtimeCount</h3>
                                    <p class="text-muted">Suất chiếu</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
