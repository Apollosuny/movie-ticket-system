@page
@model MovieTicketSystem.Pages.Admin.UsersModel
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-page="CreateUser" class="btn btn-primary"><i class="bi bi-plus"></i> Tạo người dùng mới</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Họ tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Vai trò</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>@string.Join(", ", Model.GetUserRoles(user))</td>
                    <td>
                        <a asp-page="EditUser" asp-route-id="@user.Id" class="btn btn-sm btn-info">
                            <i class="bi bi-pencil"></i>
                        </a>
                        <a asp-page="DeleteUser" asp-route-id="@user.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
