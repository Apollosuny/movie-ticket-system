@page "{id}"
@model MovieTicketSystem.Pages.Admin.DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";
}

<div class="mb-8">
    <!-- Breadcrumb -->
    <nav class="flex mb-5" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
            <li class="inline-flex items-center">
                <a href="/Admin/Dashboard" class="inline-flex items-center text-sm font-medium text-gray-700 hover:text-blue-600">
                    <i class="bi bi-house-door mr-2"></i>
                    Home
                </a>
            </li>
            <li>
                <div class="flex items-center">
                    <i class="bi bi-chevron-right text-gray-400 mx-2 text-sm"></i>
                    <a href="/Admin/Users" class="text-sm font-medium text-gray-700 hover:text-blue-600">
                        User Management
                    </a>
                </div>
            </li>
            <li>
                <div class="flex items-center">
                    <i class="bi bi-chevron-right text-gray-400 mx-2 text-sm"></i>
                    <span class="text-sm font-medium text-gray-500">Delete User</span>
                </div>
            </li>
        </ol>
    </nav>

    <div class="bg-white shadow-md rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-6">Confirm Delete User</h2>
        
        <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-md">
            <div class="flex items-start">
                <div class="flex-shrink-0">
                    <i class="bi bi-exclamation-triangle text-red-600 text-xl"></i>
                </div>
                <div class="ml-3">
                    <h3 class="text-sm font-medium text-red-800">Warning!</h3>
                    <div class="mt-2 text-sm text-red-700">
                        <p>Are you sure you want to delete this user? This action cannot be undone.</p>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="bg-gray-50 p-4 rounded-md mb-6">
            <dl class="grid grid-cols-1 md:grid-cols-2 gap-x-4 gap-y-4">
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">User ID</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.UserToDelete.Id</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Full Name</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.UserToDelete.FullName</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Email</dt>
                    <dd class="mt-1 text-sm text-gray-900">@Model.UserToDelete.Email</dd>
                </div>
                <div class="sm:col-span-1">
                    <dt class="text-sm font-medium text-gray-500">Roles</dt>
                    <dd class="mt-1 text-sm text-gray-900">
                        @string.Join(", ", Model.UserRoles)
                    </dd>
                </div>
            </dl>
        </div>
        
        <form method="post">
            <input type="hidden" asp-for="UserToDelete.Id" />
            
            <div class="flex justify-end gap-3">
                <a asp-page="Users" class="py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    Cancel
                </a>
                <button type="submit" class="py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                    Delete User
                </button>
            </div>
        </form>
    </div>
</div>
