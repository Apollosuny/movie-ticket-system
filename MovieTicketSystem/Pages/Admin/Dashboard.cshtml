                    <div>
                        <h5 class="text-lg font-medium mb-1">Screens</h5>
                        <h2 class="text-3xl font-bold">@Model.ScreenCount</h2>
                    </div>
                    <i class="bi bi-display text-4xl opacity-80"></i>
