@page
@model MovieTicketSystem.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Bảng điều khiển quản trị";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0"><i class="bi bi-speedometer2 me-2"></i>Bảng điều khiển quản trị</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a asp-page="/Index">Trang chủ</a></li>
                <li class="breadcrumb-item active">Bảng điều khiển</li>
            </ol>
        </nav>
    </div>
    
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Phim</h5>
                            <h2 class="mb-0">@Model.MovieCount</h2>
                        </div>
                        <i class="bi bi-film fs-1"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-page="/Movies/Index" class="text-white text-decoration-none">
                        Chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Màn hình</h5>
                            <h2 class="mb-0">@Model.ScreenCount</h2>
                        </div>
                        <i class="bi bi-display fs-1"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-page="/Screens/Index" class="text-white text-decoration-none">
                        Chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Suất chiếu</h5>
                            <h2 class="mb-0">@Model.ShowtimeCount</h2>
                        </div>
                        <i class="bi bi-calendar-event fs-1"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-page="/Showtimes/Index" class="text-white text-decoration-none">
                        Chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white shadow h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="card-title">Người dùng</h5>
                            <h2 class="mb-0">@Model.UserCount</h2>
                        </div>
                        <i class="bi bi-people fs-1"></i>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0">
                    <a asp-page="/Admin/Users" class="text-white text-decoration-none">
                        Chi tiết <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h5 class="m-0 fw-bold">Phim mới nhất</h5>
                    <a asp-page="/Movies/Create" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Thêm phim mới
                    </a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên phim</th>
                                    <th>Thời lượng</th>
                                    <th>Ngày phát hành</th>
                                    <th>Xếp hạng</th>
                                    <th>Hành động</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var movie in Model.LatestMovies)
                                {
                                    <tr>
                                        <td>@movie.Title</td>
                                        <td>@movie.Duration phút</td>
                                        <td>@(movie.ReleaseDate?.ToString("dd/MM/yyyy"))</td>
                                        <td>@movie.Rating</td>
                                        <td>
                                            <a asp-page="/Movies/Details" asp-route-id="@movie.MovieId" class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-page="/Movies/Edit" asp-route-id="@movie.MovieId" class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h5 class="m-0 fw-bold">Người dùng mới nhất</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var user in Model.LatestUsers)
                        {
                            <div class="list-group-item list-group-item-action d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(user.Avatar))
                                {
                                    <img src="@user.Avatar" class="rounded-circle me-3" width="40" height="40" alt="@user.FullName">
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary text-white d-flex align-items-center justify-content-center me-3" style="width:40px;height:40px">
                                        <i class="bi bi-person"></i>
                                    </div>
                                }
                                <div>
                                    <h6 class="mb-0">@user.FullName</h6>
                                    <small class="text-muted">@user.Email</small>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-page="/Admin/Users" class="btn btn-sm btn-outline-primary w-100">
                        Xem tất cả người dùng
                    </a>
                </div>
            </div>
            
            <div class="card shadow">
                <div class="card-header py-3">
                    <h5 class="m-0 fw-bold">Liên kết nhanh</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-page="/Movies/Create" class="btn btn-outline-primary">
                            <i class="bi bi-film me-2"></i>Thêm phim mới
                        </a>
                        <a asp-page="/Screens/Create" class="btn btn-outline-success">
                            <i class="bi bi-display me-2"></i>Thêm màn hình mới
                        </a>
                        <a asp-page="/Showtimes/Create" class="btn btn-outline-info">
                            <i class="bi bi-calendar-plus me-2"></i>Thêm suất chiếu mới
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
