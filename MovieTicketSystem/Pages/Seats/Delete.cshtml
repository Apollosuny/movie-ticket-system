@page
@model MovieTicketSystem.Pages.Seats.DeleteModel

@{
    ViewData["Title"] = "Delete Seat";
}

<h1>Delete Seat</h1>

<h3>Are you sure you want to delete this seat?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Screen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seat.Screen!.Name)
        </dd>
        <dt class="col-sm-2">
            Row
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seat.Row)
        </dd>
        <dt class="col-sm-2">
            Number
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seat.Number)
        </dd>
        <dt class="col-sm-2">
            Type
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Seat.Type)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Seat.SeatId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
