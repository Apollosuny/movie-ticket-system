@page
@model MovieTicketSystem.Pages.Seats.IndexModel
@{
    ViewData["Title"] = "Seats";
    Layout = "_AdminLayout";
}

<div class="mb-8 mt-4">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
        <div>
            <h1 class="text-2xl font-bold">Seats</h1>
            @if (Model.CurrentScreen != null)
            {
                <p class="text-gray-600">Screen: @Model.CurrentScreen.Name</p>
            }
        </div>
        <a asp-page="Create" class="bg-primary hover:bg-opacity-90 text-white py-2 px-4 rounded-md inline-flex items-center transition-colors">
            <i class="bi bi-plus-circle mr-2"></i> Create New
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Screen
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Row
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Number
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Type
                        </th>
                        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var item in Model.Seats)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-gray-900">@Html.DisplayFor(modelItem => item.Screen!.Name)</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-gray-900">@Html.DisplayFor(modelItem => item.Row)</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-gray-900">@Html.DisplayFor(modelItem => item.Number)</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-gray-900">@Html.DisplayFor(modelItem => item.Type)</div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex space-x-2">
                                    <a asp-page="./Edit" asp-route-id="@item.SeatId" 
                                       class="bg-blue-600 text-white px-2.5 py-1.5 text-xs rounded hover:bg-blue-700 transition-colors">
                                        Edit
                                    </a>
                                    <a asp-page="./Details" asp-route-id="@item.SeatId" 
                                       class="bg-blue-500 text-white px-2.5 py-1.5 text-xs rounded hover:bg-blue-600 transition-colors">
                                        Details
                                    </a>
                                    <a asp-page="./Delete" asp-route-id="@item.SeatId"
                                       class="bg-red-600 text-white px-2.5 py-1.5 text-xs rounded hover:bg-red-700 transition-colors">
                                        Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
