@page
@model MovieTicketSystem.Pages.Showtimes.EditModel

@{
    ViewData["Title"] = "Edit Showtime";
}

<h1>Edit Showtime</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Showtime.ShowtimeId" />
            <div class="form-group">
                <label asp-for="Showtime.MovieId" class="control-label">Movie</label>
                <select asp-for="Showtime.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
                <span asp-validation-for="Showtime.MovieId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.ScreenId" class="control-label">Screen</label>
                <select asp-for="Showtime.ScreenId" class="form-control" asp-items="ViewBag.ScreenId"></select>
                <span asp-validation-for="Showtime.ScreenId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.StartTime" class="control-label">Start Time</label>
                <input asp-for="Showtime.StartTime" class="form-control" />
                <span asp-validation-for="Showtime.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Showtime.Price" class="control-label">Price</label>
                <input asp-for="Showtime.Price" class="form-control" />
                <span asp-validation-for="Showtime.Price" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
