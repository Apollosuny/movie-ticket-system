@page
@model MovieTicketSystem.Pages.Showtimes.DeleteModel

@{
    ViewData["Title"] = "Delete Showtime";
}

<h1>Delete Showtime</h1>

<h3>Are you sure you want to delete this showtime?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.Movie!.Title)
        </dd>
        <dt class="col-sm-2">
            Screen
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.Screen!.Name)
        </dd>
        <dt class="col-sm-2">
            Start Time
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.StartTime)
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Showtime.Price)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Showtime.ShowtimeId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
