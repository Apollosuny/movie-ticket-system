@page
@model MovieTicketSystem.Pages.Showtimes.IndexModel
@{
    ViewData["Title"] = "Showtimes";
    Layout = "_AdminLayout";
}

<div class="mb-8 mt-4">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
        <h1 class="text-2xl font-bold">Showtimes</h1>
        <a asp-page="Create" class="bg-primary hover:bg-opacity-90 text-white py-2 px-4 rounded-md inline-flex items-center transition-colors">
            <i class="bi bi-plus-circle mr-2"></i> Create New
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            Movie
                        </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Screen
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Start Time
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Price
                    </th>
                    <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var item in Model.Showtimes) {
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap">
                        @Html.DisplayFor(modelItem => item.Movie!.Title)
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @Html.DisplayFor(modelItem => item.Screen!.Name)
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        @(item.Price.ToString("#,###")) VNƒê
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap space-x-2">
                        <a asp-page="./Edit" asp-route-id="@item.ShowtimeId" class="inline-flex items-center px-3 py-1 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            Edit
                        </a>
                        <a asp-page="./Details" asp-route-id="@item.ShowtimeId" class="inline-flex items-center px-3 py-1 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Details
                        </a>
                        <a asp-page="./Delete" asp-route-id="@item.ShowtimeId" class="inline-flex items-center px-3 py-1 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            Delete
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
