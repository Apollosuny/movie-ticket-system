@page
@model MovieTicketSystem.Pages.Showtimes.CreateModel

@{
    ViewData["Title"] = "Create Showtime";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Create Showtime</h1>

    <div class="w-full max-w-2xl">
        <div class="bg-white shadow-md rounded-lg p-6">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>
                
                <div class="mb-4">
                    <label asp-for="Showtime.MovieId" class="block text-sm font-medium text-gray-700 mb-1">Movie</label>
                    <select asp-for="Showtime.MovieId" 
                            class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" 
                            asp-items="ViewBag.MovieId"></select>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Showtime.ScreenId" class="block text-sm font-medium text-gray-700 mb-1">Screen</label>
                    <select asp-for="Showtime.ScreenId" 
                            class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" 
                            asp-items="ViewBag.ScreenId"></select>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Showtime.StartTime" class="block text-sm font-medium text-gray-700 mb-1">Start Time</label>
                    <input asp-for="Showtime.StartTime" 
                           class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Showtime.StartTime" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="mb-6">
                    <label asp-for="Showtime.Price" class="block text-sm font-medium text-gray-700 mb-1">Price</label>
                    <input asp-for="Showtime.Price" 
                           class="block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500" />
                    <span asp-validation-for="Showtime.Price" class="text-red-500 text-sm"></span>
                </div>
                
                <div class="flex items-center space-x-4">
                    <button type="submit" 
                            class="px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Create
                    </button>
                    <a asp-page="Index" 
                       class="px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                        Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
