@page
@model MovieTicketSystem.Pages.Screens.DetailsModel
@using MovieTicketSystem.Models

@{
    ViewData["Title"] = "Screen Details";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index">Screens</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Screen.Name</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Screen Details</h4>
                    <span class="badge bg-light text-dark">ID: @Model.Screen.ScreenId</span>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6 class="text-muted">Screen Name</h6>
                                <h4>@Model.Screen.Name</h4>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6 class="text-muted">Seating Capacity</h6>
                                <h4><i class="bi bi-people-fill me-2"></i>@Model.Screen.SeatCapacity seats</h4>
                            </div>
                        </div>
                    </div>

                    @if (Model.UpcomingShowtimes != null && Model.UpcomingShowtimes.Any())
                    {
                        <h5 class="mb-3">Upcoming Showtimes</h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Movie</th>
                                        <th>Date & Time</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var showtime in Model.UpcomingShowtimes)
                                    {
                                        <tr>
                                            <td>@showtime.Movie?.Title</td>
                                            <td>@showtime.StartTime.ToString("MMM dd, yyyy - h:mm tt")</td>
                                            <td>@showtime.Price.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i> No upcoming showtimes scheduled for this screen.
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Screens
                        </a>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@Model.Screen.ScreenId" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit Screen
                            </a>
                            <a asp-page="./Delete" asp-route-id="@Model.Screen.ScreenId" class="btn btn-outline-danger ms-2">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Screen Information</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        This screen can accommodate <strong>@Model.Screen.SeatCapacity</strong> viewers at once.
                    </p>
                    <p>Use the actions below to manage this screen:</p>
                    <div class="d-grid gap-2">
                        <a href="#" class="btn btn-outline-primary">
                            <i class="bi bi-view-list me-2"></i>View Seat Map
                        </a>
                        <a href="#" class="btn btn-outline-success">
                            <i class="bi bi-calendar-plus me-2"></i>Schedule New Showtime
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
