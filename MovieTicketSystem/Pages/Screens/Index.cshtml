@page
@model MovieTicketSystem.Pages.Screens.IndexModel

@{
    ViewData["Title"] = "Screens";
}

<div class="container py-4">    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Movie Screens</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Screen
        </a>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Available Screens</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="table-light">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Screen[0].Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Screen[0].SeatCapacity)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
    <tbody>
@foreach (var item in Model.Screen) {        <tr>
            <td>
                <strong>@Html.DisplayFor(modelItem => item.Name)</strong>
            </td>
            <td>
                <span class="badge bg-info text-dark">@Html.DisplayFor(modelItem => item.SeatCapacity) seats</span>
            </td>
            <td>
                <div class="btn-group btn-group-sm">
                    <a asp-page="./Edit" asp-route-id="@item.ScreenId" class="btn btn-outline-primary">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.ScreenId" class="btn btn-outline-info">
                        <i class="bi bi-info-circle"></i> Details
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.ScreenId" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </td>
        </tr>
}    </tbody>
</table>
        </div>
    </div>
    
    <div class="mt-4 text-muted">
        <p><small>Total screens: @Model.Screen.Count</small></p>
    </div>
</div>
