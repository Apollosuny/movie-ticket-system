@page
@model MovieTicketSystem.Pages.Screens.DeleteModel

@{
    ViewData["Title"] = "Delete Screen";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index">Screens</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete Screen</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Deletion</h4>
                </div>
                <div class="card-body">
                    @if (Model.HasRelatedData)
                    {
                        <div class="alert alert-warning" role="alert">
                            <h5><i class="bi bi-exclamation-circle-fill me-2"></i> Warning!</h5>
                            <p>This screen has related showtimes or seats. Deleting it will also remove all associated data.</p>
                        </div>
                    }
                    
                    <h5 class="mb-3">Are you sure you want to delete this screen?</h5>
                    
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p class="mb-2 text-muted">Screen Name:</p>
                                    <h5>@Model.Screen.Name</h5>
                                </div>
                                <div class="col-md-6">
                                    <p class="mb-2 text-muted">Seating Capacity:</p>
                                    <h5>@Model.Screen.SeatCapacity seats</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <p class="text-danger">This action cannot be undone.</p>
                    
                    <form method="post">
                        <input type="hidden" asp-for="Screen.ScreenId" />
                        <div class="d-flex justify-content-between">
                            <a asp-page="./Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
