@page
@model PrivacyModel
@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h1>
    
    <div class="prose lg:prose-xl max-w-none">
        <p class="text-gray-600">Use this page to detail your site's privacy policy.</p>
        
        <!-- Add more content here as needed for the privacy policy -->
        <div class="bg-gray-50 p-6 rounded-lg mt-8">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Information We Collect</h2>
            <p class="text-gray-600 mb-4">
                This is a placeholder for your privacy policy content. Please update this with your actual privacy policy information.
            </p>
        </div>
    </div>
</div>
