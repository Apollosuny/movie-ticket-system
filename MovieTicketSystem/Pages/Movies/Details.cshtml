@page "{id:int}"
@using MovieTicketSystem.Models
@model MovieTicketSystem.Pages.Movies.DetailsModel

@{
    ViewData["Title"] = Model.Movie?.Title ?? "Chi tiết phim";
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index">Phim</a></li>
            <li class="breadcrumb-item active">@Model.Movie?.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <img src="https://via.placeholder.com/400x600?text=@Uri.EscapeDataString(Model.Movie?.Title ?? "")" class="card-img-top" alt="@Model.Movie?.Title">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="card-title mb-0">@Model.Movie?.Title</h4>
                        <span class="badge bg-primary">@Model.Movie?.Rating</span>
                    </div>
                    <p class="text-muted mb-3">Thời lượng: @Model.Movie?.Duration phút</p>
                    <p class="card-text">@Model.Movie?.Description</p>
                    <p class="text-muted">
                        <i class="bi bi-calendar-event me-2"></i>Ngày khởi chiếu: @Model.Movie?.ReleaseDate?.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>

            @if (User.IsInRole("Administrator"))
            {
                <div class="d-grid gap-2">
                    <a asp-page="./Edit" asp-route-id="@Model.Movie?.MovieId" class="btn btn-primary">
                        <i class="bi bi-pencil me-2"></i>Chỉnh sửa phim
                    </a>
                </div>
            }
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="bi bi-calendar-week me-2"></i>Lịch chiếu</h5>
                </div>
                <div class="card-body">
                    @if (!Model.Showtimes.Any())
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle me-2"></i>Hiện chưa có suất chiếu nào cho phim này.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Thời gian</th>
                                        <th>Phòng chiếu</th>
                                        <th>Giá vé</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var showtime in Model.Showtimes)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@showtime.StartTime.ToString("dd/MM/yyyy")</strong><br/>
                                                <small class="text-muted">@showtime.StartTime.ToString("HH:mm")</small>
                                            </td>
                                            <td>@showtime.Screen?.Name</td>
                                            <td>@showtime.Price.ToString("N0") VNĐ</td>
                                            <td>
                                                <a asp-page="/Showtimes/Details" asp-route-id="@showtime.ShowtimeId" class="btn btn-primary btn-sm">
                                                    <i class="bi bi-ticket-perforated me-1"></i>Đặt vé
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
