@page
@model MovieTicketSystem.Pages.Movies.CreateModel

@{
    ViewData["Title"] = "Create Movie";
}

<div class="mb-8">
    <h1 class="text-2xl font-bold mb-2">Create New Movie</h1>
    <hr class="mb-6" />
    
    <div class="flex flex-col lg:flex-row">
        <div class="w-full lg:w-1/2">
            <form method="post" enctype="multipart/form-data" class="bg-white p-6 rounded-lg shadow-md">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>
                
                <div class="mb-4">
                    <label asp-for="Movie.Title" class="block text-sm font-medium text-gray-700 mb-1">
                        <span class="text-danger mr-1">*</span>Title
                    </label>
                    <input asp-for="Movie.Title" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                    <span asp-validation-for="Movie.Title" class="text-danger text-sm"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Movie.Duration" class="block text-sm font-medium text-gray-700 mb-1">
                        <span class="text-danger mr-1">*</span>Duration (minutes)
                    </label>
                    <input asp-for="Movie.Duration" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                    <span asp-validation-for="Movie.Duration" class="text-danger text-sm"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Movie.Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <input asp-for="Movie.Description" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                    <span asp-validation-for="Movie.Description" class="text-danger text-sm"></span>
                </div>
                
                <div class="mb-4">
                    <label asp-for="Movie.Rating" class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
                    <input asp-for="Movie.Rating" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                    <span asp-validation-for="Movie.Rating" class="text-danger text-sm"></span>
                </div>                <div class="mb-4">
                    <label asp-for="Movie.ReleaseDate" class="block text-sm font-medium text-gray-700 mb-1">Release Date</label>
                    <input asp-for="Movie.ReleaseDate" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" type="date" />
                    <span asp-validation-for="Movie.ReleaseDate" class="text-danger text-sm"></span>
                </div>
                
                <div class="mb-6">
                    <label asp-for="ImageFile" class="block text-sm font-medium text-gray-700 mb-1">Image Banner</label>
                    <input asp-for="ImageFile" type="file" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" accept="image/*" />
                    <span asp-validation-for="ImageFile" class="text-danger text-sm"></span>
                </div>
                
                <div class="flex items-center justify-between">
                    <button type="submit" class="bg-primary hover:bg-opacity-90 text-white font-medium py-2 px-6 rounded-md transition-colors">
                        Create
                    </button>
                    <a asp-page="Index" class="text-gray-600 hover:text-gray-900 hover:underline ml-4">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
