@page
@model MovieTicketSystem.Pages.Movies.EditModel

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex flex-col md:flex-row justify-between items-center mb-6">
        <h1 class="text-2xl font-bold mb-2">Edit Movie</h1>
        <nav class="flex" aria-label="breadcrumb">
            <ol class="flex space-x-2 text-sm">
                <li><a href="/" class="text-primary hover:underline">Home</a></li>
                <li><span class="text-gray-500 mx-1">/</span></li>
                <li><a asp-page="./Index" class="text-primary hover:underline">Movies</a></li>
                <li><span class="text-gray-500 mx-1">/</span></li>
                <li class="text-gray-700">Edit</li>
            </ol>
        </nav>
    </div>
    
    <div class="flex justify-center">
        <div class="w-full md:w-2/3 lg:w-1/2">
            <div class="bg-white rounded-lg shadow-md p-6">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="bg-red-50 text-red-600 p-4 rounded-md mb-6"></div>
                    <input type="hidden" asp-for="Movie.MovieId" />
                    <input type="hidden" asp-for="Movie.ImageBanner" />
                    
                    <div class="mb-4">
                        <label asp-for="Movie.Title" class="block text-sm font-medium text-gray-700 mb-1">
                            <span class="text-red-600 mr-1">*</span>Title
                        </label>
                        <input asp-for="Movie.Title" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Movie.Title" class="text-sm text-red-600"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Movie.Duration" class="block text-sm font-medium text-gray-700 mb-1">
                            <span class="text-red-600 mr-1">*</span>Duration (minutes)
                        </label>
                        <input asp-for="Movie.Duration" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Movie.Duration" class="text-sm text-red-600"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Movie.Description" class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                        <textarea asp-for="Movie.Description" rows="3" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
                        <span asp-validation-for="Movie.Description" class="text-sm text-red-600"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Movie.Rating" class="block text-sm font-medium text-gray-700 mb-1">Rating</label>
                        <input asp-for="Movie.Rating" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Movie.Rating" class="text-sm text-red-600"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Movie.ReleaseDate" class="block text-sm font-medium text-gray-700 mb-1">Release Date</label>
                        <input asp-for="Movie.ReleaseDate" type="date" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Movie.ReleaseDate" class="text-sm text-red-600"></span>
                    </div>
                    
                    <div class="mb-6">
                        <label asp-for="ImageFile" class="block text-sm font-medium text-gray-700 mb-1">Image Banner</label>
                        <input asp-for="ImageFile" type="file" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" accept="image/*" />
                        <span asp-validation-for="ImageFile" class="text-sm text-red-600"></span>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Movie.ImageBanner))
                    {
                        <div class="mb-6">
                            <label class="block text-sm font-medium text-gray-700 mb-2">Current Image:</label>
                            <div class="mt-1">
                                <img src="@Model.Movie.ImageBanner" class="max-h-40 rounded shadow" alt="Movie banner" />
                            </div>
                        </div>
                    }
                    
                    <div class="flex items-center justify-between mt-8">
                        <a asp-page="./Index" class="text-gray-600 hover:text-gray-900 py-2 px-4 border border-gray-300 rounded-md hover:bg-gray-50 transition-colors">
                            <i class="bi bi-arrow-left mr-2"></i>Back to List
                        </a>
                        <button type="submit" class="bg-primary hover:bg-opacity-90 text-white py-2 px-6 rounded-md transition-colors">
                            <i class="bi bi-save mr-2"></i>Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
