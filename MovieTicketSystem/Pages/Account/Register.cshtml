@page
@model MovieTicketSystem.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="flex justify-center">
    <div class="w-full md:w-1/2 lg:w-2/5">
        <h2 class="text-2xl font-bold mb-4">@ViewData["Title"]</h2>
        <hr class="mb-6" />
        <div class="bg-white rounded-lg shadow-md">
            <div class="p-6">
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Input.FullName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Input.FullName" class="text-danger text-sm"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Input.Email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Input.Email" class="text-danger text-sm"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.Password" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Input.Password" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" type="password" />
                        <span asp-validation-for="Input.Password" class="text-danger text-sm"></span>
                    </div>
                    
                    <div class="mb-6">
                        <label asp-for="Input.ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1"></label>
                        <input asp-for="Input.ConfirmPassword" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" type="password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger text-sm"></span>
                    </div>
                    
                    <button type="submit" class="w-full bg-primary hover:bg-opacity-90 text-white font-medium py-2 px-4 rounded-md transition-colors">
                        Register
                    </button>
                </form>
            </div>
        </div>
        <div class="mt-4 text-center">
            <p>
                <a asp-page="./Login" class="text-primary hover:underline">Already have an account? Login</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
