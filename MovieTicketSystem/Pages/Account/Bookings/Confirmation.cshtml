@page "{id:int}"
@model MovieTicketSystem.Pages.Account.Bookings.ConfirmationModel
@{
    ViewData["Title"] = "Xác nhận đặt vé";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center p-5">
                    <div class="display-1 text-success mb-4">
                        <i class="bi bi-check-circle"></i>
                    </div>
                    <h2 class="mb-4">Đặt vé thành công!</h2>
                    
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-clock me-2"></i>
                        Vui lòng thanh toán trong vòng <strong>15 phút</strong> để hoàn tất đặt vé
                    </div>

                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title mb-4">Thông tin đặt vé</h5>
                            <div class="row">
                                <div class="col-md-6 text-start">
                                    <p class="mb-2">
                                        <strong>Phim:</strong><br/>
                                        @Model.Booking.Showtime?.Movie?.Title
                                    </p>
                                    <p class="mb-2">
                                        <strong>Suất chiếu:</strong><br/>
                                        @Model.Booking.Showtime?.StartTime.ToString("dd/MM/yyyy HH:mm")
                                    </p>
                                    <p class="mb-0">
                                        <strong>Phòng chiếu:</strong><br/>
                                        @Model.Booking.Showtime?.Screen?.Name
                                    </p>
                                </div>
                                <div class="col-md-6 text-start">
                                    <p class="mb-2">
                                        <strong>Số ghế:</strong><br/>
                                        @string.Join(", ", Model.Booking.Tickets?.Select(t => $"{t.Seat?.Row}{t.Seat?.Number}") ?? Array.Empty<string>())
                                    </p>
                                    <p class="mb-2">
                                        <strong>Tổng tiền:</strong><br/>
                                        <span class="text-primary">@Model.Booking.TotalPrice.ToString("N0") VNĐ</span>
                                    </p>
                                    <p class="mb-0">
                                        <strong>Mã đặt vé:</strong><br/>
                                        <span class="badge bg-secondary">@Model.Booking.BookingId</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form method="post" class="mb-3">
                        <input type="hidden" asp-for="Booking.BookingId" />
                        <button type="submit" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-credit-card me-2"></i>Thanh toán ngay
                        </button>
                    </form>

                    <div class="text-muted">
                        <a asp-page="./Index" class="text-decoration-none">
                            <i class="bi bi-arrow-left me-1"></i>Xem lịch sử đặt vé
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
