@page
@model MovieTicketSystem.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Profile";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold mb-6">@ViewData["Title"]</h2>
    
    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="mb-4 p-4 rounded-md bg-green-50 border border-green-200">
            <p class="text-green-600">@Model.StatusMessage</p>
        </div>
    }
    
    <div class="flex flex-col lg:flex-row">
        <div class="w-full lg:w-1/2">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <form id="profile-form" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-4"></div>
                    
                    <div class="mb-4">
                        <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
                        <input asp-for="Username" class="w-full px-3 py-2 border border-gray-300 bg-gray-100 rounded-md" disabled />
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.FullName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                        <input asp-for="Input.FullName" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Input.FullName" class="text-danger text-sm"></span>
                    </div>
                    
                    <div class="mb-4">
                        <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                        <input asp-for="Input.Email" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Input.Email" class="text-danger text-sm"></span>
                    </div>
                    
                    <div class="mb-6">
                        <label asp-for="Input.PhoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
                        <input asp-for="Input.PhoneNumber" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger text-sm"></span>
                    </div>
                    
                    <div class="flex items-center justify-between">
                        <button id="update-profile-button" type="submit" class="bg-primary hover:bg-opacity-90 text-white font-medium py-2 px-6 rounded-md transition-colors">
                            <i class="bi bi-check-circle mr-2"></i>Save Changes
                        </button>
                        <a asp-page="./ChangePassword" class="text-primary hover:underline">Change Password</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
