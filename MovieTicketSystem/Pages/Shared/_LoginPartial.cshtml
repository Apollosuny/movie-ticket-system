@using Microsoft.AspNetCore.Identity
@using MovieTicketSystem.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Xin chào @(UserManager.GetUserAsync(User).Result?.FullName ?? User.Identity?.Name)
        </a>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <li><a class="dropdown-item" asp-area="" asp-page="/Account/Manage/Index">Hồ sơ</a></li>
            <li><a class="dropdown-item" asp-area="" asp-page="/Account/Manage/ChangePassword">Đổi mật khẩu</a></li>
            @if (User.IsInRole("Administrator"))
            {
                <li><a class="dropdown-item" asp-area="" asp-page="/Admin/Users">Quản lý người dùng</a></li>
            }
            <li><hr class="dropdown-divider"></li>
            <li>
                <form class="form-inline" asp-area="" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-link dropdown-item">Đăng xuất</button>
                </form>
            </li>
        </ul>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Account/Register">Đăng ký</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Đăng nhập</a>
    </li>
}
</ul>
