@{
    Layout = "_Layout";
}

<div class="flex min-h-screen bg-gray-100">
    <!-- Sidebar -->
    <div class="bg-gray-800 text-white w-64 space-y-6 py-7 px-2 absolute inset-y-0 left-0 transform -translate-x-full md:relative md:translate-x-0 transition duration-200 ease-in-out z-10" id="sidebar">
        <div class="flex items-center justify-between px-4">
            <div class="flex items-center space-x-2">
                <i class="bi bi-film text-primary text-2xl"></i>
                <span class="text-lg font-semibold">Admin Panel</span>
            </div>
            <button class="md:hidden focus:outline-none" onclick="toggleSidebar()">
                <i class="bi bi-x text-2xl"></i>
            </button>
        </div>
        
        <!-- Admin User Info -->
        <div class="px-4 py-4">
            <div class="flex items-center space-x-3">
                <div class="h-10 w-10 rounded-full bg-primary flex items-center justify-center text-white font-semibold">
                    <i class="bi bi-person"></i>
                </div>
                <div>
                    <div class="text-sm font-medium">Admin User</div>
                    <div class="text-xs text-gray-400">Administrator</div>
                </div>
            </div>
        </div>
        
        <nav class="mt-2">
            <p class="px-4 text-xs text-gray-400 uppercase mb-2 tracking-wider">Main</p>
            
            <a asp-page="/Admin/Dashboard" class="block py-2.5 px-4 rounded transition duration-200 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Admin/Dashboard") ? "bg-primary text-white" : "hover:bg-gray-700")">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-speedometer2 w-5 text-center"></i>
                    <span>Dashboard</span>
                </div>
            </a>
            
            <p class="px-4 text-xs text-gray-400 uppercase mb-2 mt-5 tracking-wider">Content</p>
            
            <a asp-page="/Movies/Index" class="block py-2.5 px-4 rounded transition duration-200 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Movies") ? "bg-primary text-white" : "hover:bg-gray-700")">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-film w-5 text-center"></i>
                    <span>Movies</span>
                </div>
            </a>
            
            <a asp-page="/Screens/Index" class="block py-2.5 px-4 rounded transition duration-200 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Screens") ? "bg-primary text-white" : "hover:bg-gray-700")">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-display w-5 text-center"></i>
                    <span>Screens</span>
                </div>
            </a>
            
            <a asp-page="/Showtimes/Index" class="block py-2.5 px-4 rounded transition duration-200 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Showtimes") ? "bg-primary text-white" : "hover:bg-gray-700")">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-calendar-event w-5 text-center"></i>
                    <span>Showtimes</span>
                </div>
            </a>
            
            <a asp-page="/Seats/Index" class="block py-2.5 px-4 rounded transition duration-200 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Seats") ? "bg-primary text-white" : "hover:bg-gray-700")">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-grid w-5 text-center"></i>
                    <span>Seats</span>
                </div>
            </a>
            
            <p class="px-4 text-xs text-gray-400 uppercase mb-2 mt-5 tracking-wider">Users & Access</p>
            
            <a asp-page="/Admin/Users" class="block py-2.5 px-4 rounded transition duration-200 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Admin/Users") ? "bg-primary text-white" : "hover:bg-gray-700")">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-people w-5 text-center"></i>
                    <span>Users</span>
                </div>
            </a>
            
            <a href="#" class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-shield-lock w-5 text-center"></i>
                    <span>Roles & Permissions</span>
                </div>
            </a>
            
            <p class="px-4 text-xs text-gray-400 uppercase mb-2 mt-5 tracking-wider">System</p>
            
            <a href="#" class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-gear w-5 text-center"></i>
                    <span>Settings</span>
                </div>
            </a>
            
            <a asp-page="/Index" class="block py-2.5 px-4 rounded transition duration-200 hover:bg-gray-700">
                <div class="flex items-center space-x-3">
                    <i class="bi bi-house w-5 text-center"></i>
                    <span>Back to Site</span>
                </div>
            </a>
        </nav>
        
        <!-- Sidebar Footer -->
        <div class="px-4 mt-6">
            <div class="bg-gray-700 rounded-lg p-3">
                <p class="text-xs text-gray-400 mb-2">System Status</p>
                <div class="flex justify-between mb-2">
                    <span class="text-xs text-white">Server</span>
                    <span class="text-xs text-green-400">Online</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-xs text-white">Last Backup</span>
                    <span class="text-xs text-white">Today 09:30 AM</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Bar -->
        <header class="bg-white shadow-sm">
            <div class="flex items-center justify-between py-4 px-6">
                <div class="flex items-center">
                    <button class="md:hidden focus:outline-none" onclick="toggleSidebar()">
                        <i class="bi bi-list text-2xl"></i>
                    </button>
                    <h2 class="text-xl font-semibold ml-4">@ViewData["Title"]</h2>
                </div>
                <div class="flex items-center space-x-4">
                    <!-- Search -->
                    <div class="relative hidden md:block">
                        <div class="flex items-center">
                            <input type="text" placeholder="Search..." class="border border-gray-300 rounded-lg py-2 px-4 pr-10 focus:outline-none focus:ring-1 focus:ring-primary focus:border-primary">
                            <div class="absolute right-0 top-0 mt-2.5 mr-3 text-gray-400">
                                <i class="bi bi-search"></i>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Notifications Dropdown -->
                    <div class="relative" id="notificationsDropdown">
                        <button onclick="toggleDropdown('notificationsList')" class="text-gray-500 hover:text-gray-700 focus:outline-none relative">
                            <i class="bi bi-bell text-xl"></i>
                            <span class="absolute top-0 right-0 h-4 w-4 bg-red-500 rounded-full flex items-center justify-center text-white text-xs">3</span>
                        </button>
                        <div id="notificationsList" class="hidden origin-top-right absolute right-0 mt-2 w-80 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10">
                            <div class="py-2">
                                <div class="px-4 py-2 border-b border-gray-100 flex justify-between items-center">
                                    <h3 class="text-sm font-medium">Notifications</h3>
                                    <span class="text-xs text-primary hover:underline cursor-pointer">Mark All as Read</span>
                                </div>
                                <div class="max-h-64 overflow-y-auto">
                                    <a href="#" class="block px-4 py-3 hover:bg-gray-50 border-b border-gray-100">
                                        <div class="flex">
                                            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-500">
                                                <i class="bi bi-ticket"></i>
                                            </div>
                                            <div class="ml-3">
                                                <p class="text-sm font-medium text-gray-900">New booking completed</p>
                                                <p class="text-xs text-gray-500">Customer: John Smith</p>
                                                <p class="text-xs text-gray-500 mt-1">5 minutes ago</p>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="#" class="block px-4 py-3 hover:bg-gray-50 border-b border-gray-100">
                                        <div class="flex">
                                            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-green-100 flex items-center justify-center text-green-500">
                                                <i class="bi bi-person"></i>
                                            </div>
                                            <div class="ml-3">
                                                <p class="text-sm font-medium text-gray-900">New user registered</p>
                                                <p class="text-xs text-gray-500">Sarah Johnson</p>
                                                <p class="text-xs text-gray-500 mt-1">1 hour ago</p>
                                            </div>
                                        </div>
                                    </a>
                                    <a href="#" class="block px-4 py-3 hover:bg-gray-50">
                                        <div class="flex">
                                            <div class="flex-shrink-0 h-10 w-10 rounded-full bg-yellow-100 flex items-center justify-center text-yellow-500">
                                                <i class="bi bi-exclamation-circle"></i>
                                            </div>
                                            <div class="ml-3">
                                                <p class="text-sm font-medium text-gray-900">System Alert</p>
                                                <p class="text-xs text-gray-500">Low storage space warning</p>
                                                <p class="text-xs text-gray-500 mt-1">3 hours ago</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <div class="px-4 py-2 border-t border-gray-100">
                                    <a href="#" class="text-sm text-primary hover:underline block text-center">View All Notifications</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Full screen toggle -->
                    <button id="fullscreenToggle" class="text-gray-500 hover:text-gray-700 focus:outline-none">
                        <i class="bi bi-arrows-fullscreen text-xl"></i>
                    </button>
                    
                    <!-- Quick Actions -->
                    <div class="relative" id="quickActionsDropdown">
                        <button onclick="toggleDropdown('quickActionsList')" class="text-gray-500 hover:text-gray-700 focus:outline-none">
                            <i class="bi bi-grid text-xl"></i>
                        </button>
                        <div id="quickActionsList" class="hidden origin-top-right absolute right-0 mt-2 w-64 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline-none z-10">
                            <div class="py-2 grid grid-cols-3 gap-2 p-4">
                                <a asp-page="/Movies/Index" class="flex flex-col items-center justify-center p-2 rounded hover:bg-gray-50">
                                    <div class="h-8 w-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-500">
                                        <i class="bi bi-film"></i>
                                    </div>
                                    <span class="text-xs mt-1">Movies</span>
                                </a>
                                <a asp-page="/Showtimes/Index" class="flex flex-col items-center justify-center p-2 rounded hover:bg-gray-50">
                                    <div class="h-8 w-8 rounded-full bg-green-100 flex items-center justify-center text-green-500">
                                        <i class="bi bi-calendar"></i>
                                    </div>
                                    <span class="text-xs mt-1">Showtimes</span>
                                </a>
                                <a asp-page="/Admin/Users" class="flex flex-col items-center justify-center p-2 rounded hover:bg-gray-50">
                                    <div class="h-8 w-8 rounded-full bg-purple-100 flex items-center justify-center text-purple-500">
                                        <i class="bi bi-people"></i>
                                    </div>
                                    <span class="text-xs mt-1">Users</span>
                                </a>
                                <a href="#" class="flex flex-col items-center justify-center p-2 rounded hover:bg-gray-50">
                                    <div class="h-8 w-8 rounded-full bg-yellow-100 flex items-center justify-center text-yellow-500">
                                        <i class="bi bi-ticket"></i>
                                    </div>
                                    <span class="text-xs mt-1">Bookings</span>
                                </a>
                                <a href="#" class="flex flex-col items-center justify-center p-2 rounded hover:bg-gray-50">
                                    <div class="h-8 w-8 rounded-full bg-red-100 flex items-center justify-center text-red-500">
                                        <i class="bi bi-gear"></i>
                                    </div>
                                    <span class="text-xs mt-1">Settings</span>
                                </a>
                                <a href="#" class="flex flex-col items-center justify-center p-2 rounded hover:bg-gray-50">
                                    <div class="h-8 w-8 rounded-full bg-indigo-100 flex items-center justify-center text-indigo-500">
                                        <i class="bi bi-question-circle"></i>
                                    </div>
                                    <span class="text-xs mt-1">Help</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- User dropdown -->
                    <div class="relative ml-3">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
            
            <!-- Breadcrumb -->
            <div class="px-6 py-2 bg-gray-50 border-t border-gray-100">
                <nav class="flex" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-2 text-sm text-gray-500">
                        <li>
                            <a asp-page="/Admin/Dashboard" class="text-gray-500 hover:text-gray-700">Admin</a>
                        </li>
                        <li>
                            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
                            </svg>
                        </li>
                        <li class="text-gray-700 font-medium">@ViewData["Title"]</li>
                    </ol>
                </nav>
            </div>
        </header>

        <!-- Main Content -->
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-100 p-6">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded shadow-sm">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-700">@TempData["SuccessMessage"]</p>
                        </div>
                        <div class="ml-auto pl-3">
                            <div class="-mx-1.5 -my-1.5">
                                <button type="button" class="inline-flex rounded-md p-1.5 text-green-500 hover:bg-green-100 focus:outline-none" onclick="this.parentElement.parentElement.parentElement.parentElement.remove()">
                                    <span class="sr-only">Dismiss</span>
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded shadow-sm">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <svg class="h-5 w-5 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"></path>
                            </svg>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">@TempData["ErrorMessage"]</p>
                        </div>
                        <div class="ml-auto pl-3">
                            <div class="-mx-1.5 -my-1.5">
                                <button type="button" class="inline-flex rounded-md p-1.5 text-red-500 hover:bg-red-100 focus:outline-none" onclick="this.parentElement.parentElement.parentElement.parentElement.remove()">
                                    <span class="sr-only">Dismiss</span>
                                    <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
            @RenderBody()
        </main>
        
        <!-- Footer -->
        <footer class="bg-white shadow-sm py-4 px-6 border-t border-gray-100">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="text-sm text-gray-600 mb-2 md:mb-0">
                    &copy; @DateTime.Now.Year Movie Ticket System. All rights reserved.
                </div>
                <div class="flex items-center space-x-4">
                    <a href="#" class="text-sm text-gray-600 hover:text-primary">Privacy Policy</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-primary">Terms of Service</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-primary">Help Center</a>
                </div>
            </div>
        </footer>
    </div>
</div>

<script>
    // Toggle sidebar
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        sidebar.classList.toggle('-translate-x-full');
    }
    
    // Toggle dropdown menus
    function toggleDropdown(id) {
        const dropdown = document.getElementById(id);
        dropdown.classList.toggle('hidden');
        
        // Close other dropdowns
        const allDropdowns = document.querySelectorAll('.origin-top-right');
        allDropdowns.forEach(item => {
            if (item.id !== id) {
                item.classList.add('hidden');
            }
        });
    }
    
    // Close dropdowns when clicking outside
    document.addEventListener('click', function(event) {
        if (!event.target.closest('#notificationsDropdown') && !event.target.closest('#quickActionsDropdown')) {
            document.getElementById('notificationsList').classList.add('hidden');
            document.getElementById('quickActionsList').classList.add('hidden');
        }
    });
    
    // Fullscreen toggle functionality
    document.getElementById('fullscreenToggle').addEventListener('click', function() {
        if (!document.fullscreenElement) {
            document.documentElement.requestFullscreen().catch(err => {
                console.log(`Error attempting to enable full-screen mode: ${err.message}`);
            });
        } else {
            if (document.exitFullscreen) {
                document.exitFullscreen();
            }
        }
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
