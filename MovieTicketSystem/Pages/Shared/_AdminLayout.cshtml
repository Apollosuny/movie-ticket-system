@{
    Layout = "_Layout";
}

<div class="flex h-screen bg-gray-100 overflow-hidden">
    <!-- Sidebar -->
    <div id="sidebar" class="bg-gray-800 text-white w-64 min-h-screen shadow-lg overflow-y-auto transition-all duration-300 ease-in-out fixed lg:relative z-30">
        <!-- Logo and Title -->
        <div class="flex items-center justify-between p-4 border-b border-gray-700">
            <div class="flex items-center space-x-2">
                <i class="bi bi-film text-blue-500 text-2xl"></i>
                <span class="text-lg font-semibold">Admin Dashboard</span>
            </div>
            <button id="closeSidebar" class="lg:hidden text-gray-300 hover:text-white">
                <i class="bi bi-x text-xl"></i>
            </button>
        </div>

        <!-- Admin Info -->
        <div class="p-4 border-b border-gray-700">
            <div class="flex items-center space-x-3">
                <div class="bg-blue-500 rounded-full h-10 w-10 flex items-center justify-center">
                    <i class="bi bi-person-fill text-white"></i>
                </div>
                <div>
                    <p class="text-sm font-medium">Administrator</p>
                    <p class="text-xs text-gray-400">System Admin</p>
                </div>
            </div>
        </div>

        <!-- Navigation Menu -->
        <nav class="p-4">
            <div class="mb-4">
                <p class="uppercase text-xs text-gray-400 font-semibold mb-2">Main Navigation</p>
                <a href="/Admin/Dashboard" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Admin/Dashboard") ? "bg-blue-600 text-white" : "")">
                    <i class="bi bi-speedometer2 mr-3"></i>
                    <span>Dashboard</span>
                </a>
            </div>

            <div class="mb-4">
                <p class="uppercase text-xs text-gray-400 font-semibold mb-2">Content Management</p>
                <a href="/Movies/Index" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Movies") ? "bg-blue-600 text-white" : "")">
                    <i class="bi bi-film mr-3"></i>
                    <span>Movies</span>
                </a>
                <a href="/Screens/Index" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Screens") ? "bg-blue-600 text-white" : "")">
                    <i class="bi bi-display mr-3"></i>
                    <span>Screens</span>
                </a>
                <a href="/Showtimes/Index" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Showtimes") ? "bg-blue-600 text-white" : "")">
                    <i class="bi bi-calendar-event mr-3"></i>
                    <span>Showtimes</span>
                </a>
                <a href="/Seats/Index" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Seats") ? "bg-blue-600 text-white" : "")">
                    <i class="bi bi-grid mr-3"></i>
                    <span>Seats</span>
                </a>
            </div>

            <div class="mb-4">
                <p class="uppercase text-xs text-gray-400 font-semibold mb-2">User Management</p>
                <a href="/Admin/Users" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700 @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Admin/Users") ? "bg-blue-600 text-white" : "")">
                    <i class="bi bi-people mr-3"></i>
                    <span>Users</span>
                </a>
                <a href="#" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700">
                    <i class="bi bi-shield-lock mr-3"></i>
                    <span>Roles & Permissions</span>
                </a>
            </div>

            <div class="mb-4">
                <p class="uppercase text-xs text-gray-400 font-semibold mb-2">System</p>
                <a href="#" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700">
                    <i class="bi bi-gear mr-3"></i>
                    <span>Settings</span>
                </a>
                <a href="/" class="flex items-center text-gray-300 py-2 px-3 mb-1 rounded hover:bg-gray-700">
                    <i class="bi bi-house mr-3"></i>
                    <span>Back to Home</span>
                </a>
            </div>
        </nav>
    </div>

    <!-- Main Content -->
    <div class="flex-1 flex flex-col overflow-hidden admin-layout-container">
        <!-- Top Navbar -->
        <header class="bg-white shadow-sm z-10 sticky top-0">
            <div class="flex items-center justify-between p-4">
                <div class="flex items-center">
                    <button id="openSidebar" class="lg:hidden mr-2 text-gray-600 hover:text-gray-800">
                        <i class="bi bi-list text-2xl"></i>
                    </button>
                    <h1 class="text-xl font-semibold text-gray-800">@ViewData["Title"]</h1>
                </div>
                <div class="flex items-center space-x-4">
                    <!-- Notifications -->
                    <div class="relative">
                        <button id="notificationBtn" class="text-gray-600 hover:text-gray-800 relative">
                            <i class="bi bi-bell text-xl"></i>
                            <span class="absolute -top-1 -right-1 bg-red-500 text-white rounded-full w-4 h-4 text-xs flex items-center justify-center">3</span>
                        </button>
                        <div id="notificationDropdown" class="absolute right-0 mt-2 bg-white rounded shadow-lg w-72 hidden z-20">
                            <div class="p-2 border-b border-gray-200 flex justify-between items-center">
                                <span class="font-semibold">Notifications</span>
                                <a href="#" class="text-xs text-blue-500 hover:underline">Mark all as read</a>
                            </div>
                            <div class="max-h-60 overflow-y-auto">
                                <a href="#" class="block p-3 hover:bg-gray-50 border-b border-gray-100">
                                    <div class="flex">
                                        <div class="flex-shrink-0 h-8 w-8 bg-blue-100 text-blue-500 rounded-full flex items-center justify-center">
                                            <i class="bi bi-envelope"></i>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm font-medium">New ticket booking</p>
                                            <p class="text-xs text-gray-500 mt-1">5 minutes ago</p>
                                        </div>
                                    </div>
                                </a>
                                <a href="#" class="block p-3 hover:bg-gray-50">
                                    <div class="flex">
                                        <div class="flex-shrink-0 h-8 w-8 bg-green-100 text-green-500 rounded-full flex items-center justify-center">
                                            <i class="bi bi-check-circle"></i>
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-sm font-medium">System update successful</p>
                                            <p class="text-xs text-gray-500 mt-1">2 hours ago</p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="p-2 border-t border-gray-200">
                                <a href="#" class="block text-center text-sm text-blue-500 hover:underline">View all notifications</a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- User Menu -->
                    <div class="relative">
                        <button id="userMenuBtn" class="flex items-center space-x-2 text-gray-700 hover:text-gray-900">
                            <div class="bg-gray-200 rounded-full h-8 w-8 flex items-center justify-center">
                                <i class="bi bi-person"></i>
                            </div>
                            <span class="hidden md:inline-block">Admin</span>
                            <i class="bi bi-chevron-down text-sm"></i>
                        </button>
                        <div id="userDropdown" class="absolute right-0 mt-2 bg-white rounded shadow-lg w-48 hidden z-20">
                            <a href="#" class="block px-4 py-2 hover:bg-gray-50 text-sm">
                                <i class="bi bi-person-circle mr-2"></i>Profile
                            </a>
                            <a href="#" class="block px-4 py-2 hover:bg-gray-50 text-sm">
                                <i class="bi bi-gear mr-2"></i>Settings
                            </a>
                            <div class="border-t border-gray-100"></div>
                            <a href="/Account/Logout" class="block px-4 py-2 hover:bg-gray-50 text-sm text-red-500">
                                <i class="bi bi-box-arrow-right mr-2"></i>Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Breadcrumbs -->
            <div class="px-4 py-2 bg-gray-50 border-t border-gray-200">
                <nav class="flex" aria-label="Breadcrumb">
                    <ol class="flex items-center space-x-1 text-sm">
                        <li>
                            <a href="/" class="text-gray-500 hover:text-gray-700">Home</a>
                        </li>
                        <li class="flex items-center space-x-1">
                            <span class="text-gray-400">/</span>
                            <a href="/Admin/Dashboard" class="text-gray-500 hover:text-gray-700">Admin</a>
                        </li>
                        <li class="flex items-center space-x-1">
                            <span class="text-gray-400">/</span>
                            <span class="text-gray-700 font-medium">@ViewData["Title"]</span>
                        </li>
                    </ol>
                </nav>
            </div>
        </header>

        <!-- Main Content Area -->
        <main class="flex-1 overflow-y-auto p-4 md:p-6 bg-gray-50 min-h-[calc(100vh-140px)] admin-content">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6 rounded shadow-sm alert-dismissible">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="bi bi-check-circle text-green-500"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-green-700">@TempData["SuccessMessage"]</p>
                        </div>
                        <button class="ml-auto close-alert">
                            <i class="bi bi-x text-green-500 hover:text-green-700"></i>
                        </button>
                    </div>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6 rounded shadow-sm alert-dismissible">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="bi bi-exclamation-triangle text-red-500"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-red-700">@TempData["ErrorMessage"]</p>
                        </div>
                        <button class="ml-auto close-alert">
                            <i class="bi bi-x text-red-500 hover:text-red-700"></i>
                        </button>
                    </div>
                </div>
            }
            
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="bg-white border-t border-gray-200 px-4 py-3 mt-auto footer-sticky">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="text-sm text-gray-600 mb-2 md:mb-0">
                    &copy; @DateTime.Now.Year Movie Ticket System. All rights reserved.
                </div>
                <div class="flex space-x-4">
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-500">Privacy Policy</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-500">Terms of Service</a>
                    <a href="#" class="text-sm text-gray-600 hover:text-blue-500">Help</a>
                </div>
            </div>
        </footer>
    </div>
</div>

@section Scripts {
    <script>
        // Sidebar toggle
        document.getElementById('openSidebar').addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('-translate-x-full');
        });
        
        document.getElementById('closeSidebar').addEventListener('click', function() {
            document.getElementById('sidebar').classList.add('-translate-x-full');
        });
        
        // Handle dropdown toggles
        function setupDropdown(triggerBtn, dropdownId) {
            document.getElementById(triggerBtn).addEventListener('click', function() {
                const dropdown = document.getElementById(dropdownId);
                dropdown.classList.toggle('hidden');
                
                // Close other dropdowns
                document.querySelectorAll('.dropdown-content').forEach(function(element) {
                    if (element.id !== dropdownId) {
                        element.classList.add('hidden');
                    }
                });
            });
        }
        
        setupDropdown('notificationBtn', 'notificationDropdown');
        setupDropdown('userMenuBtn', 'userDropdown');
        
        // Close dropdowns when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('#notificationBtn') && !event.target.closest('#notificationDropdown')) {
                document.getElementById('notificationDropdown').classList.add('hidden');
            }
            
            if (!event.target.closest('#userMenuBtn') && !event.target.closest('#userDropdown')) {
                document.getElementById('userDropdown').classList.add('hidden');
            }
        });
        
        // Alert dismissal
        document.querySelectorAll('.close-alert').forEach(function(button) {
            button.addEventListener('click', function() {
                this.closest('.alert-dismissible').remove();
            });
        });
        
        // On mobile, hide sidebar by default
        function checkScreenSize() {
            if (window.innerWidth < 1024) {
                document.getElementById('sidebar').classList.add('-translate-x-full');
            } else {
                document.getElementById('sidebar').classList.remove('-translate-x-full');
            }
        }
        
        // Check on page load and resize
        checkScreenSize();
        window.addEventListener('resize', checkScreenSize);
    </script>

    @await RenderSectionAsync("Scripts", required: false)
}
